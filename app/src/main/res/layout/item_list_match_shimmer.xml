<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        app:contentPadding="8dp"
        android:layout_margin="2dp"
        android:elevation="6dp"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/logo_team_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/poster_movie"
                android:src="@color/background_shimmer"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        <ImageView
                android:id="@+id/logo_team_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/poster_movie"
                android:src="@color/background_shimmer"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name_team_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/background_shimmer"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintEnd_toEndOf="@+id/logo_team_1"
                app:layout_constraintStart_toStartOf="@+id/logo_team_1"
                app:layout_constraintTop_toBottomOf="@+id/logo_team_1"
                tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name_team_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/background_shimmer"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintEnd_toEndOf="@+id/logo_team_2"
                app:layout_constraintStart_toStartOf="@+id/logo_team_2"
                app:layout_constraintTop_toBottomOf="@+id/logo_team_2"
                tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/score_team_1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/background_shimmer"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBaseline_toBaselineOf="@+id/between_score"
                app:layout_constraintEnd_toStartOf="@+id/between_score"
                app:layout_constraintStart_toEndOf="@+id/logo_team_1"
                tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/score_team_2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@color/background_shimmer"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBaseline_toBaselineOf="@+id/between_score"
                app:layout_constraintEnd_toStartOf="@+id/logo_team_2"
                app:layout_constraintStart_toEndOf="@+id/between_score"
                tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/between_score"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/background_shimmer"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBottom_toBottomOf="@+id/logo_team_2"
                app:layout_constraintEnd_toEndOf="@+id/rilis_match"
                app:layout_constraintStart_toStartOf="@+id/rilis_match"
                app:layout_constraintTop_toBottomOf="@+id/rilis_match"
                tools:ignore="MissingConstraints" />


        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name_match"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/background_shimmer"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/logo_team_2"
                app:layout_constraintStart_toEndOf="@+id/logo_team_1"
                app:layout_constraintTop_toTopOf="@id/logo_team_1"
                tools:ignore="MissingConstraints" />

        <TextView
                android:id="@+id/rilis_match"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:background="@color/background_shimmer"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/logo_team_2"
                app:layout_constraintStart_toEndOf="@+id/logo_team_1"
                app:layout_constraintTop_toBottomOf="@id/name_match"
                tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>